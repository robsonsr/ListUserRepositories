{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl" : "./",
    "paths": {
      "@components": ["./src/presentation/components/index"],
      "@components/*": ["./src/presentation/components/*"],
      "@infrastructure": ["./src/infrastructure/index"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@domain": ["./src/domain/index"],
      "@domain/*": ["./src/domain/*"],
      "@queries": ["src/queries/index"],
      "@queries/*": ["src/queries/*"],
      "@modules": ["./src/presentation/modules/index"],
      "@modules/*": ["./src/presentation/modules/*"],
      "@images": ["./src/presentation/images/index"],
      "@presentation/*": ["./src/presentation/*"]
    },
    "strict": true 
  }
}
